{
  "manifest_version": 2,

  "name": "Hello World Demo",
  "description": "A hello world extension!",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "browser_action": {
    "default_icon": "icon16.png"
  },
"content_scripts": [
        {
        "matches": [
            "http://*/*",
            "https://*/*"
            ],
        "js": ["content.js"],
        "run_at": "document_end"         // pay attention to this line
        }
],
  "options_page" : "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
},
  "permissions" : [
    "storage",
    "tabs",
    "https://*/*",
    "http://*/*"
  ]
}